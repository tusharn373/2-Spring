<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        <bean id="a1" class="Address">
        <constructor-arg name="street" value="LIT_Road"></constructor-arg>
        <constructor-arg name="city" value="Nagpur"></constructor-arg>
        <constructor-arg name="state" value="Maharashtra"></constructor-arg>
        </bean>
        <bean id="s1" class="Student">
        <constructor-arg name="rollno" value="223"></constructor-arg>
        <constructor-arg name="name" value="Tushar"></constructor-arg>
        <constructor-arg name="result" value="93.5"></constructor-arg>
        <constructor-arg name="address" ref="a1"></constructor-arg>
        </bean>
        </beans>